<?xml version="1.0" encoding="utf-8" ?>
<XnaContent>
  <!-- TODO: replace this Asset with your own XML asset data. -->
  <Asset Type="System.String"></Asset>
  <Controls>
    <!-- Directional controlls-->
    <Up>
      <Keyboard>Up</Keyboard>
      <Wiimote>Right</Wiimote>
    </Up>
    <Down>
      <Keyboard>Down</Keyboard>
      <Wiimote>Left</Wiimote>
    </Down>
    <Left>
      <Keyboard>Left</Keyboard>
      <Wiimote>Up</Wiimote>
    </Left>
    <Right>
      <Keyboard>Right</Keyboard>
      <Wiimote>Down</Wiimote>
    </Right>
    <!-- Buttons -->
    <Select>
      <Keyboard>Enter</Keyboard>
      <Wiimote>A</Wiimote>
    </Select>
    <Back>
      <Keyboard>Backspace</Keyboard>
      <Wiimote>B</Wiimote>
    </Back>
    <Fire>
      <Keyboard>Z</Keyboard>
      <Wiimote>Two</Wiimote>
    </Fire>
    <VolumeUp>
      <Keyboard>1</Keyboard>
      <Wiimote>Plus</Wiimote>
    </VolumeUp>
    <VolumeDown>
      <Keyboard>2</Keyboard>
      <Wiimote>Minus</Wiimote>
    </VolumeDown>
    <Pause>
      <Keyboard>P</Keyboard>
      <Wiimote>Home</Wiimote>
    </Pause>
    </Controls>
</XnaContent>
